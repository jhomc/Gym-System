{% extends "layout.njk" %}

{% block content %}
<form class="card" method="post" action="/instructors">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/9419482/900x900) no-repeat center center / cover"></section>
    <section class="details">

        <h3>Novo Instrutor</h3>
        
        <div class="item">
            <div>Avatar URL</div>
            <div>
               <input type="url" 
               name="avatar_url"
               placeholder="http://"
               >
            </div>
        </div>

        <div class="item">
            <div>Instrutor</div>
            <div>
                <input 
                type="text"
                name="name"
                placeholder="Nome"
                >
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                type="date" 
                name="birth"
                placeholder="dd/mm/aaaa"
                >
            </div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>
                <span><input type="radio" name="gender" value="M" checked> Masculino</span>
                <span><input type="radio" name="gender" value="F"> Feminino</span>
            </div>
        </div>

        <div class="item">
            <div>Area de atuação</div>
            <div>
                <input type="text" 
                name="services"
                placeholder="Separe os serviços prestados por virgula"
                >
            </div>
        </div>

        <button type="submit">Salvar</button>
    </section>
    
</form>

{% endblock content %}